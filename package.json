{
  "name": "kuzzle-plugin-logger",
  "version": "2.0.0",
  "description": "Kuzzle plugin that handles logs",
  "main": "./lib/index.js",
  "scripts": {
    "test": "grunt && mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kuzzleio/kuzzle-plugin-logger.git"
  },
  "keywords": [
    "kuzzle",
    "plugin",
    "logger",
    "winston"
  ],
  "author": "Kuzzle Team",
  "bugs": {
    "url": "https://github.com/kuzzleio/kuzzle-plugin-logger/issues"
  },
  "pluginInfo": {
    "defaultConfig": {
      "services": {
        "file": {
          "outputs": {
            "error": {
              "level": "error",
              "filename": "kuzzle-error.log"
            },
            "warning": {
              "level": "warn",
              "filename": "kuzzle-warning.log"
            }
          },
          "addDate": true
        },
        "stdout": {
          "level": "info",
          "addDate": true
        }
      },
      "loadedBy": "all"
    }
  },
  "license": "Apache-2.0",
  "dependencies": {
    "winston": "2.2.0"
  },
  "devDependencies" : {
    "eslint": "1.10.3",
    "grunt": "^0.4.5",
    "grunt-contrib-jshint": "^0.11.3",
    "gruntify-eslint": "^1.2.0",
    "mocha": "2.3.4",
    "should": "8.0.2",
    "rewire": "2.5.1"
  }
}
